<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Modern Business - Start Bootstrap Template</title>
    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/modern-business.css" rel="stylesheet">
    <!-- summernote -->
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.css" rel="stylesheet">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.js"></script>
    <script src="/js/summernote-ko-KR.js"></script>
    <script src="/js/signup.js"></script>
</head>

<body style="padding:0px;">
    <!-- Page Content -->
    <div class="container" style="margin-top: 30px">
        <h1 class="my-4">물품등록</h1>
    </div>
    <div class="container mb-4" id="content">
        <!-- Page Heading/Breadcrumbs -->
        <form class="form-horizontal" enctype="multipart/form-data" name="content_form" method="POST" action="/item_add_content" onkeydown="return captureReturnKey(event)">
            <div class="form-group">
                <label class="col-sm-2 control-label">카테고리</label>
                <div class="col-sm-10">
                    <select class="form-control" id="category" name="category">
                        <option hidden>카테고리를 선택하세요</option>
                        <option value="fashion">패션</option>
                        <option value="life">생필품</option>
                        <option value="hobby">취미</option>
                        <option value="it">디지털/IT</option>
                        <option value="etc">기타</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">제목</label>
                <div class="col-sm-10">
                    <input class="form-control" id="title" name="title" type="text" placeholder="제목을 입력하세요">
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">시작가격</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="min_price" name="min_price" type="text" placeholder="시작가격을 입력하세요" onkeydown='return onlyNumber(event)' onkeyup='removeChar(event)' maxlength=8>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">상한가</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="max_price" name="max_price" type="text" placeholder="상한가를 입력하세요" onkeydown='return onlyNumber(event)' onkeyup='removeChar(event)' maxlength=8>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">메인사진</label>
                        <input class="col-8 mt-2" type="file" name="img" id='filena' accept="image/x-png,image/png,image/jpg,image/jpeg,image/gif">
                    </div>
                </div>
            </div>
            <div class="add_item">
                <textarea id="summernote" name="content"></textarea>
                <div style="text-align: right">
                    <button type="submit" class="btn btn-primary" onClick="checkForm(), xx()" onsubmit="return true;">등록</button>
                </div>
                <script>
                function xx() {
                    let min = $('#min_price').val();
                    min = parseInt(min.replace(/,/gi, ''));
                    let max = $('#max_price').val();
                    max = parseInt(max.replace(/,/gi, ''));
                    var filena = $('#filena').val();
                    
                    if (min >= max) {
                        alert('가격을 다시확인 하세요');
                        event.preventDefault();
                    }
                    if (!filena) {
                        alert('사진은 필수입니다.');
                        event.preventDefault();
                    }
                }
                </script>
                <script>
                $(document).ready(function() {
                    $('#summernote').summernote({
                        height: 500,
                        lang: 'ko-KR'
                    });
                });
                </script>
            </div>
        </form>
    </div>
    <!-- /.container -->
</body>
<script type="text/javascript" src="/js/simple.money.format.js"></script>
<script type="text/javascript">
$('#min_price').simpleMoneyFormat();
$('#max_price').simpleMoneyFormat();
</script>
<script>
// iframe parent window 
function checkForm() {
    document.content_form.target = "_parent";
    // document.content_form.submit(); 
}
</script>

</html>